/**index.wxss**/
.Worm-floor {
  background: #fff;
  margin: 20rpx 0;
}
.Worm-menu {
  padding: 40rpx 30rpx 20rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.Worm-flex1 {
  flex: 1;
}
.Worm-about-title {
  text-align: center;
}
.Worm-about {
  padding: 20rpx;
  background: #adb4b1;
  color: #fff;
  font-size: 32rpx;
}
.Worm-kinds {
  text-align: center;
  font-size: 28rpx;
  color: #333;
  width: 90rpx;
}
.Worm-kinds .iconfont {
  font-size: 42rpx;
  display: block;
}
.view-circle {
  border-radius: 100%;
  color: #fff;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 auto 20rpx;
}
.color4 {
  background-color: #8a90fa;
}
.color3 {
  background-color: #4dc6ee;
}
.color2 {
  background-color: #fed030;
}
.color1 {
  background-color: #fd9d21;
}
.Worm-floor-title {
  padding: 20rpx 20rpx;
  font-size: 32rpx;
  color: #666;
  border-bottom: 2rpx solid #f2f2f2;
}
.Worm-floor-title .iconfont {
  color: #555;
  font-size: 15px;
}
.Worm-content {
  font-size: 26rpx;
  margin: 10rpx 0 30rpx;
  line-height: 1.4;
}
.Worm-article {
  padding: 50rpx 20rpx 40rpx;
  display: flex;
}
.Worm-title {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}
.Worm-title .iconfont {
  font-size: 52rpx;
  display: block;
  color: #599eec;
}
.Worm-Line .iconfont, .Worm-btn .iconfont{
  color: #599eec;
  font-size: 46rpx;
  padding-right: 10rpx;
  vertical-align: middle;
}
.Worm-Line .iconfont.fr {
  float: right;
  color: #a8a8a8;
  padding-right: 0;
  font-size: 30rpx;
}
.Worm-Line,.Worm-btn {
  padding: 20rpx 20rpx 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
  font-size: 34rpx;
  color: #333;
  margin-left: 20rpx;
  line-height: 60rpx;
  text-align: left
}
.Worm-btn{
  padding: 0;
  margin: 0;
  border-bottom: none
}
.Worm-Line:last-child {
  border-bottom: none;
}
