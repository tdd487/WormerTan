.Worm-floor1 {
  background: #adb4b1;
  color: #fff;
  font-size: 26rpx;
}

.Worm-swiper {
  height: 260rpx;
  padding: 40rpx 40rpx 0;
  text-align: center;
}

.Worm-top-quote {
  margin: 0 20rpx 30rpx;
  font-size: 32rpx;
  text-align: center;
}

.Worm-floor2 {
  background: #fff;
}

.Worm-menu {
  padding: 40rpx 30rpx 20rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.icon-pinglun3 {
  padding-left: 20rpx;
}

.Worm-news {
  overflow: hidden;
  margin: 20rpx;
  background: #fff;
  border-radius: 8rpx;
}

.Worm-title {
  display: -webkit-box;
  margin: 10rpx 20rpx 0;
  font-size: 34rpx;
  color: #333;
  white-space: pre-wrap;
  word-break: break-word;
}

.Worm-imgitem {
  flex: none;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  display: block;
}

.Worm-content {
  position: relative;
  color: #333;
}

.Worm-detail {
  padding: 10rpx 20rpx 20rpx;
  font-size: 28rpx;
  color: #999;
  z-index: 3;
  line-height: 1.5;
}

.Worm-bottom {
  position: absolute;
  top: 244rpx;
  width: 100%;
  display: flex;
  margin: 10rpx 0 0;
  padding: 0 20rpx;
  color: #fff;
  line-height: 2;
  background: rgba(0, 0, 0, 0.2);
}

.Worm-icon {
  font-size: 24rpx;
  margin-right: 24rpx;
}

.Worm-bottom .iconfont {
  margin: -22rpx 0 0;
  font-size: 24rpx;
}

.Worm-menu {
  padding: 20rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.Worm-kinds {
  width: 90rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.Worm-kinds .iconfont {
  font-size: 46rpx;
  display: block;
}

.Worm-circle {
  border-radius: 100%;
  color: #fff;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 auto 8rpx;
}

.Worm-music {
  position: absolute;
  right: 20rpx;
  top: 0;
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  z-index: 2;
}

.Worm-play {
  position: relative;
  line-height: 72rpx;
}

.Worm-rotate {
  animation: rotate 1s linear infinite;
}

.icon-CD {
  font-size: 48rpx;
  margin-top: 10rpx;
  color: #fefefe;
}

@keyframes rotate {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
    transform-origin: 0, 0;
  }

  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
    transform-origin: 0, 0;
  }
}
