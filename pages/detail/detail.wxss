.wxParse-h5 {
  padding: 5rpx 0;
  font-weight: 600;
}

/*top10推荐*/

.Worm-top {
  background: #fff;
  padding: 20rpx 0;
}

.Worm-topli {
  position: relative;
  padding: 20rpx 20rpx 20rpx 40rpx;
  font-size: 28rpx;
  color: #999;
}

.Worm-topli:before {
  position: absolute;
  left: 20rpx;
  top: 34rpx;
  width: 10rpx;
  height: 10rpx;
  background: #4bb777;
  content: '';
  border-radius: 100%;
}

.Worm-read {
  margin: 40rpx 0 0;
  color: #999;
  font-size: 30rpx;
}

.Worm-Right {
  float: right;
  font-size: 32rpx;
  color: #999;
}

.Worm-Right .iconfont {
  margin-top: -8rpx;
  vertical-align: middle;
  font-size: 34rpx;
}

