/*最新*/

.Worm-comments {
  background: #fff;
  padding: 20rpx 0 0;
}

.Worm-lists {
  padding: 20rpx;
}

.Worm-resource {
  display: flex;
}

.Worm-image {
  flex: none;
  width: 80rpx;
  height: 80rpx;
  border-radius: 4rpx;
}

.Worm-user {
  flex: 1;
  padding: 0 0 20rpx;
  font-size: 24rpx;
  color: #a8a8a8;
  line-height: 1;
  border-bottom: 1rpx solid #f2f2f2;
}

.Worm-items {
  padding: 30rpx 0 0;
}

.Worm-items:last-child .Worm-user {
  border-bottom: none;
}

.Worm-form {
  margin: 0 0 0 20rpx;
}

.Worm-names {
  font-size: 28rpx;
  color: #666;
}

.Worm-times {
  padding: 16rpx 0;
  color: #999;
  font-size: 20rpx;
}

.Worm-comment-content {
  color: #666;
  font-size: 32rpx;
  line-height: 44rpx;
}

.Worm-back {
  margin: 20rpx 0 0 20rpx;
  color: #999;
  font-size: 28rpx;
  padding: 10rpx;
  line-height: 1.6;
  background: #f5f5f5;
}

.Worm-back-item {
  line-height: 1.4;
  word-break: break-all;
  padding: 5rpx 0;
}

.Worm-tt {
  color: #333;
}

.Worm-empty {
  padding: 60rpx 0 80rpx;
  text-align: center;
  font-size: 14px;
  color: #999;
}

.Worm-finish {
  padding: 30rpx 0;
  text-align: center;
  color: #999;
}

.Worm-end {
  padding: 30rpx 0;
  text-align: center;
  line-height: 1;
  border-top: 1rpx solid #f2f2f2;
  color: #999;
}

.Worm-word {
  line-height: 1;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #999;
}

.iconfont.icon-kafei {
  display: block;
  font-size: 90rpx;
  color: #eee;
  margin-bottom: 10rpx;
}

.Worm-link {
  margin: 20rpx 0 0;
  padding: 5rpx;
  background: #f5f5f5;
  color: #999;
}

.Worm-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 2rpx solid #d9d9d9;
  z-index: 5;
  background: #fff;
}

.Worm-flex {
  padding: 12rpx 20rpx;
  display: flex;
}

.Worm-none {
  width: 80rpx;
  flex: none;
  font-size: 20rpx;
  color: #999;
  line-height: 40rpx;
}

.Worm-none .iconfont {
  display: block;
  font-size: 48rpx;
  color: #4bb777;
  font-weight: 600;
}

.Worm-none .iconfont.icon-heart-fill {
  color: #4bb777;
}

.Worm-input {
  flex: 1;
  margin: 0 0 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background: #eef0f4;
  border: 1rpx solid #f2f2f2;
  font-size: 26rpx;
  border-radius: 4rpx;
  color: #666;
}

/* components/photo/photo.wxss */

.Worm-photo {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

.Worm-done {
  width: 80%;
  height: 80%;
  position: fixed;
  top: 50rpx;
  left: 50%;
  margin-left: -40%;
  z-index: 10;
}

.Worm-btn {
  display: block;
  width: 40%;
  height: 100rpx;
  padding: 0;
  line-height: 100rpx;
  text-align: center;
  position: fixed;
  bottom: 10%;
  background: #fff;
  color: #333;
  font-size: 32rpx;
  border: 1rpx solid #f2f2f2;
  z-index: 11;
}

.Worm-save {
  left: 50%;
  color: #adb4b1;
}

.Worm-close {
  left: 10%;
}

.Worm-canvas {
  width: 0;
  height: 0;
  overflow: hidden;
}

.Worm-flexform {
  flex: 1;
  margin: 0 20rpx 0 0;
  height: 80rpx;
  line-height: 80rpx;
}

.Worm-post {
  flex: none;
  height: 83rpx;
  background: #4bb777;
  line-height: 83rpx;
  color: #fff;
  font-size: 26rpx;
  border-radius: 4rpx;

  text-align: center;
  box-shadow: none;
}
