<!--pages/timeriver/timeriver.wxml-->
<view class="">
  <form catchsubmit="formSubmit" catchreset="formReset">
  <view class="page-section">
    <view class="page-section-title">标题</view>
    <view class="textarea-wrp">
      <textarea name="title" bindblur="bindTextAreaBlur" auto-height />
    </view>
  </view>
  <view class="page-section">
    <view class="page-section-title">内容</view>
    <view class="textarea-wrp">
      <textarea name="content" bindblur="bindTextAreaBlur" auto-height />
    </view>
    <view class="page-section">
    <view class="page-section-title">类型</view>
    <view class="textarea-wrp">
      <textarea name="type" bindblur="bindTextAreaBlur" auto-height />
    </view>
  </view>
  </view>
  <view class="btn-area">
        <button style="margin: 30rpx 0" type="primary" formType="submit">提交</button>
      </view>    
  </form>
  
</view>
