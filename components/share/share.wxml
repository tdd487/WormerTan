<view class='Rose-mask' wx:if='{{show}}' bindtap='clickMask'>
  <view class='Rose-content'>
    <scroll-view scroll-y class="Rose-main">
      <slot></slot>
    </scroll-view>
    <view class='Rose-btns'>
      <button class="Rose-cancel" bindtap='cancel' hover-class="none">朕不转发</button>
      <button class="Rose-confirm" open-type="share" hover-class="none">乐意效劳</button>
    </view>
  </view>
</view>
